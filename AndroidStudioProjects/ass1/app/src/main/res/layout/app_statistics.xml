<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.3"
        android:textSize="50sp"
        android:textColor="#000"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        >

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressTint="#737373"
            android:secondaryProgressTint="#e3e3e3"
            android:scaleX=".9"
            android:scaleY=".9"
            android:rating="4.3"
            android:stepSize="0.1"
            style="?android:attr/ratingBarStyleSmall"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rating_number"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <ImageView
                android:layout_width="16dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_person"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingLeft="10dp">


        <ImageView
        android:layout_width="160dp"
        android:layout_height="10dp"
        android:background="@drawable/rating_rect"
        android:backgroundTint="#9fc05a"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="10dp"
            android:background="@drawable/rating_rect"
            android:backgroundTint="#add633"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="10dp"
            android:background="@drawable/rating_rect"
            android:backgroundTint="#ffd834"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:background="@drawable/rating_rect"
            android:backgroundTint="#ffb234"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="10dp"
            android:background="@drawable/rating_rect"
            android:backgroundTint="#ff8b5a"/>


    </LinearLayout>


</LinearLayout>